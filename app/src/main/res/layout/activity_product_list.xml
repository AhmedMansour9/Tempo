<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootlayout">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search"
        android:textStyle="italic"
        android:textColor="#fa0b33"
        android:background="@drawable/bcsearch"
        android:paddingRight="15dp"
        android:id="@+id/findyourproduct"
        android:paddingLeft="20dp"
        android:textColorHint="#fa0b33"
        android:layout_marginTop="10dp"
        android:alpha=".5"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="120dp"

        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fabbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:floating_background_color="@color/blue"
        app:floating_right_icon="@drawable/ic_camera_alt_black_24dp"
        app:floating_title="بيع حاجتك ببلاش"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"

        app:floating_title_color="@android:color/white"
        />

    <!--<android.support.design.widget.FloatingActionButton-->
