<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".Activites.Register">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#fff"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/logo"
                        />

                    </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:id="@+id/view"
                android:layout_below="@+id/toolbar"
                android:background="#C5C5C5"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/_70sdp"
              android:layout_marginStart="@dimen/_20sdp"
              android:layout_marginEnd="@dimen/_20sdp"
              android:id="@+id/Rela_Register"
              android:layout_centerHorizontal="true"
              android:padding="@dimen/_1sdp"
              android:background="@drawable/bc_register"
              android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/linear"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bc_leftselected"
                    android:text="@string/indvidual"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:id="@+id/T_Indvidual"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15sdp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/company"
                    android:id="@+id/T_Company"
                    android:textColor="#a2a2a2"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15sdp"/>

            </LinearLayout>

              <android.support.v7.widget.CardView
                  android:id="@+id/card_view_company"
                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_below="@+id/linear"
                  android:layout_height="wrap_content"
                  android:visibility="gone"
                  >

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:weightSum="5"
                          android:background="#fff"
                          android:layout_height="match_parent">

                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_45sdp"
                              android:hint="@string/fullname"
                              android:textColor="#a2a2a2"
                              android:textColorHint="#a2a2a2"
                              android:background="@null"
                              android:textSize="@dimen/_12sdp"
                              android:backgroundTint="#e5e5e5"
                              android:paddingEnd="@dimen/_10sdp"
                              android:paddingStart="@dimen/_10sdp"
                              android:id="@+id/E_FullNameCompany"
                              />

                          <View
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_1sdp"
                              android:background="#e5e5e5"/>


                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_45sdp"
                              android:hint="@string/company"
                              android:textColor="#a2a2a2"
                              android:textColorHint="#a2a2a2"
                              android:background="@null"
                              android:textSize="@dimen/_12sdp"
                              android:backgroundTint="#e5e5e5"
                              android:paddingEnd="@dimen/_10sdp"
                              android:paddingStart="@dimen/_10sdp"
                              android:id="@+id/E_Company"
                              />






                          <View
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_1sdp"
                              android:background="#e5e5e5"/>

                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_45sdp"
                              android:hint="@string/phone"
                              android:layout_marginTop="@dimen/_1sdp"
                              android:textColor="#a2a2a2"
                              android:textColorHint="#a2a2a2"
                              android:inputType="phone"
                              android:background="@null"
                              android:backgroundTint="#e5e5e5"
                              android:textSize="@dimen/_12sdp"
                              android:paddingEnd="@dimen/_10sdp"
                              android:paddingStart="@dimen/_10sdp"
                              android:id="@+id/E_PhoneCompany"
                              />
                          <View
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_1sdp"
                              android:id="@+id/view66"
                              android:background="#e5e5e5"/>

                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_45sdp"
                              android:hint="@string/email"
                              android:layout_marginTop="@dimen/_1sdp"
                              android:textColor="#a2a2a2"
                              android:textColorHint="#a2a2a2"
                              android:background="@null"
                              android:textSize="@dimen/_12sdp"
                              android:backgroundTint="#e5e5e5"
                              android:paddingEnd="@dimen/_10sdp"
                              android:paddingStart="@dimen/_10sdp"
                              android:id="@+id/E_EmailCompany"
                              android:inputType="textEmailAddress"
                              />
                          <View
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_1sdp"
                              android:background="#e5e5e5"/>

                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_45sdp"
                              android:hint="@string/password"
                              android:layout_marginTop="@dimen/_1sdp"
                              android:textColor="#a2a2a2"
                              android:textColorHint="#a2a2a2"
                              android:background="@null"
                              android:inputType="textPassword"
                              android:textSize="@dimen/_12sdp"
                              android:backgroundTint="#e5e5e5"
                              android:paddingEnd="@dimen/_10sdp"
                              android:paddingStart="@dimen/_10sdp"
                              android:id="@+id/E_PasswordCompany"
                              />

                      </LinearLayout>
                  </RelativeLayout>

              </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:id="@+id/card_view_Indvidual"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_below="@+id/linear"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:weightSum="5"
                        android:background="#fff"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/fullname"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:textSize="@dimen/_12sdp"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_FullName"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/major"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:textSize="@dimen/_12sdp"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_Major"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/years"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="number"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_Years"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/location"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:textSize="@dimen/_12sdp"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_Location"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/c_name"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:textSize="@dimen/_12sdp"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_CompanyName"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/phone"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:inputType="phone"
                            android:background="@null"
                            android:backgroundTint="#e5e5e5"
                            android:textSize="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_Phone"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:id="@+id/view2"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/email"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:textSize="@dimen/_12sdp"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_Email"
                            android:inputType="textEmailAddress"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#e5e5e5"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:hint="@string/password"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:textColor="#a2a2a2"
                            android:textColorHint="#a2a2a2"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_12sdp"
                            android:backgroundTint="#e5e5e5"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/E_Password"
                            />

                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


          </RelativeLayout>

            <Button
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/Btn_Register"
                android:text="@string/register"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_below="@+id/Rela_Register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/bc_buttons"
                />

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/progressBarRegister"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>