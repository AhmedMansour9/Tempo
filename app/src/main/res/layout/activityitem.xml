<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <com.veinhorn.scrollgalleryview.ScrollGalleryView
        android:id="@+id/scroll_gallery_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:id="@+id/textname"
            android:background="@drawable/bctext"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/textname"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#000000"
            android:id="@+id/textdiscrp"
            android:background="@drawable/bctext"

            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:background="@drawable/bctext"
            android:text=""
            android:id="@+id/textdiscount"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:background="@drawable/bctext"
            android:text=""
            android:layout_below="@+id/textdiscount"
            android:id="@+id/textphone"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:text=""
            android:background="@drawable/bctext"

            android:layout_below="@+id/textphone"
            android:id="@+id/textdate"
            />
    </RelativeLayout>



</RelativeLayout>