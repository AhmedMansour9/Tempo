<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="bekya.bekyaa.Categories">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/friendCardView2"
        app:cardBackgroundColor="@android:color/white"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

       <!--<android.support.v7.widget.RecyclerView-->
           <!--android:layout_width="match_parent"-->
           <!--android:layout_height="@dimen/_120sdp"-->
           <!--android:id="@+id/recycler_banner2"-->
           <!--&gt;</android.support.v7.widget.RecyclerView>-->

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/view_pager_circle_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_alignBottom="@+id/vp_slider"
                android:layout_alignParentStart="true"
              ></me.relex.circleindicator.CircleIndicator>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/friendCardView2">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_cont"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent">
        <GridView
            android:id="@+id/grid_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:horizontalSpacing="@dimen/_15sdp"

            android:numColumns="auto_fit"
            android:stretchMode="columnWidth" >

        </GridView>
    </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</RelativeLayout>
