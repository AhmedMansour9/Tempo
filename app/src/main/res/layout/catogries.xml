<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tempo.Fragments.Categories">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:id="@+id/view"
                android:background="#C5C5C5"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_Categories"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_below="@+id/view"
        android:layout_height="@dimen/_35sdp"/>
  <View
      android:layout_width="match_parent"
      android:layout_height=".5dp"
      android:background="#e7e7e7"
      android:id="@+id/vieew"
      android:layout_below="@+id/recycler_Categories"/>



            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_container"
                android:layout_width="match_parent"
                android:layout_below="@+id/vieew"
                android:layout_height="@dimen/_450sdp"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </android.support.v4.widget.SwipeRefreshLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/swipe_container"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:id="@+id/recycler_banner2"
                        />

                    <!--<android.support.v4.view.ViewPager-->
                    <!--android:id="@+id/vp_slider"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent" />-->


                </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Float_AddPost"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_45sdp"
                app:fabSize="normal"
                app:rippleColor="@null"
                app:backgroundTint="@null"

                app:maxImageSize="@dimen/_50sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_400sdp"
                app:srcCompat="@drawable/ic_addpost"/>



        </RelativeLayout>

</ScrollView>
