<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/imgone"
        android:background="@drawable/no_media"
        android:layout_weight="1"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/imgtwo"
        android:layout_weight="1"
        android:background="@drawable/no_media"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/imgthree"
        android:layout_weight="1"
        android:background="@drawable/no_media"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/no_media"
        android:layout_weight="1"
        android:id="@+id/imgfour"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/deleteone"
            android:paddingLeft="50dp"
            android:src="@drawable/deletee"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/deletetwo"
            android:paddingLeft="50dp"
            android:layout_weight="1"
            android:src="@drawable/deletee"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:paddingLeft="50dp"
            android:id="@+id/deletethree"
            android:layout_weight="1"
            android:src="@drawable/deletee"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:paddingLeft="50dp"
            android:src="@drawable/deletee"
            android:layout_weight="1"
            android:id="@+id/deletrefour"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/cameraeone"
            android:src="@drawable/imgcam"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/cameratwo"
            android:layout_weight="1"
            android:src="@drawable/imgcam"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/camerathree"
            android:layout_weight="1"
            android:src="@drawable/imgcam"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:paddingLeft="40dp"
            android:src="@drawable/imgcam"
            android:layout_weight="1"
            android:id="@+id/camerafour"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:paddingLeft="20dp"
            />
<EditText
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:id="@+id/editname"
    android:maxLines="1"
    android:background="#fff"
    />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discrption"
            android:paddingLeft="20dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/editdiscrp"
            android:maxLines="1"

            android:background="#fff"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discount"

            android:paddingLeft="20dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#fff"
            android:maxLines="1"

            android:id="@+id/editdiscount"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone"
            android:paddingLeft="20dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#fff"
            android:maxLines="1"

            android:id="@+id/editphone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finish"
        android:text="Finish"
        android:background="@drawable/btnfinish"

        />



    </LinearLayout>
</RelativeLayout>