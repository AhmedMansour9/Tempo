<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/imgone"
            android:background="@drawable/no_image"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/imgtwo"
            android:layout_weight="1"
            android:background="@drawable/no_image"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/imgthree"
            android:layout_weight="1"
            android:background="@drawable/no_image"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/no_image"
            android:layout_weight="1"
            android:id="@+id/imgfour"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/deleteone"
            android:paddingLeft="50dp"
            android:src="@drawable/ic_highlight_off_white_24dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/deletetwo"
            android:paddingLeft="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_highlight_off_white_24dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:paddingLeft="50dp"
            android:id="@+id/deletethree"
            android:layout_weight="1"
            android:src="@drawable/ic_highlight_off_white_24dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:paddingLeft="50dp"
            android:src="@drawable/ic_highlight_off_white_24dp"
            android:layout_weight="1"
            android:id="@+id/deletrefour"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:id="@+id/iconsrow"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/cameraeone"
            android:src="@drawable/imgcam"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/cameratwo"
            android:layout_weight="1"
            android:src="@drawable/imgcam"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/camerathree"
            android:layout_weight="1"
            android:src="@drawable/imgcam"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:paddingLeft="40dp"
            android:src="@drawable/imgcam"
            android:layout_weight="1"
            android:id="@+id/camerafour"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/iconsrow"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:id="@+id/Input_Name"
            >
            <EditText android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:background="@drawable/bc_edittext"
                android:textColorHint="@color/darkblue"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:hint="@string/title" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:id="@+id/Input_Descrp"
            android:layout_below="@+id/Input_Name"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <EditText android:id="@+id/editdiscrp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:background="@drawable/bc_edittext"
                android:textColorHint="@color/darkblue"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:hint="@string/desc" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/Input_Descrp"
            android:id="@+id/Input_Phone"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bc_edittext"
                android:hint="@string/phone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/darkblue"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginBottom="@dimen/_25sdp"
            android:id="@+id/input_price"
            android:layout_below="@+id/Input_Phone"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <EditText android:id="@+id/editdiscount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:maxLines="10"

                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:background="@drawable/bc_edittext"
                android:textColorHint="@color/darkblue"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:hint="@string/price" />
        </android.support.design.widget.TextInputLayout>




          <Button
                 android:id="@+id/finish"
                 android:layout_width="@dimen/_120sdp"
                 android:layout_height="@dimen/_35sdp"
                 android:layout_margin="8dp"
                 android:textSize="15sp"
                 android:textAllCaps="false"
                 android:layout_below="@+id/input_price"
                 android:layout_centerHorizontal="true"
                 android:text="@string/save"
                 android:background="@drawable/bc_btnborder"
                 android:textColor="@color/white" />

    </RelativeLayout>




</RelativeLayout>


















