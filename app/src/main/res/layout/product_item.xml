<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >





    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layoutDirection="rtl"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/itemcard"
        android:layout_marginBottom="10dp"
        android:paddingBottom="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:id="@+id/progross"
            android:layout_marginLeft="@dimen/_30sdp"
            />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:text="احمد منصووووووور"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/_110sdp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="12sp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/descrption"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="start"
            android:textSize="12sp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#c9c9c9" />
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/descrption"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/marker"/>

        <TextView
            android:id="@+id/govern"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/descrption"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=" بصيصيي"
            android:gravity="right"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="#c9c9c9"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            />

        <TextView
            android:id="@+id/textdate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/descrption"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/product_image"
            android:gravity="right"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="#c9c9c9"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            />



<!--        <ImageView-->
<!--            android:id="@+id/imageedit"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:src="@drawable/ic_edit_black_24dp"-->
<!--            android:visibility="invisible" />-->

<!--        <ImageView-->
<!--            android:id="@+id/imagedeleteee"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_marginBottom="60dp"-->
<!--            android:visibility="gone"-->
<!--            android:src="@drawable/ic_delete_forever_black_24dp"-->

<!--             />-->

        <TextView
            android:id="@+id/admintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إعلان مميز"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toStartOf="@+id/product_image"
            android:background="@drawable/imageborder"
            android:textSize="@dimen/_9sdp"
            android:visibility="invisible"
            android:maxLines="1"
            android:paddingRight="@dimen/_3sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:textColor="#fff"
             />

        <Button
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/govern"
            android:text="@string/edit"
            android:id="@+id/imageedit"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bc_btnborder"
            />


        <Button
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/govern"
            android:text="@string/delete"
            android:visibility="gone"
            android:textColor="#fff"
            android:layout_marginBottom="@dimen/_5sdp"
            android:id="@+id/imagedeleteee"
            android:layout_toEndOf="@+id/imageedit"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bc_btnborder"
            />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/itemcard"
        android:layout_marginTop="@dimen/_10sdp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>









