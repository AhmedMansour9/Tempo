<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    app:cardElevation="4dp"
    android:id="@+id/itemcard"
    android:layout_marginBottom="10dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/product_image"
            android:background="@drawable/bctext"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:text="كيبورد لالبابلا بلالبابلاب لباالب"
            android:textSize="12sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/product_image"
            android:background="@drawable/bctext"
            android:text="25 ج.م"
            android:gravity="right"
            android:textSize="12sp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/govern"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/product_image"
            android:background="@drawable/bctext"
            android:text="كيبورد"
            android:gravity="right"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            />

        <TextView
            android:id="@+id/textdate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/govern"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/product_image"
            android:background="@drawable/bctext"
            android:text="25-6-1999"
            android:gravity="right"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            />



        <ImageView
            android:id="@+id/imageedit"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edit_black_24dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imagedeleteee"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:src="@drawable/ic_delete_forever_black_24dp"

            android:visibility="invisible" />

        <TextView
            android:id="@+id/admintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="إعلان مميز"
            android:background="@drawable/imageborder"
            android:textSize="10sp"
            android:layout_marginRight="5dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:textColor="#000000"
            android:visibility="invisible" />


    </RelativeLayout>
</android.support.v7.widget.CardView>